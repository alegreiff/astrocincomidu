---
import {ClientRouter} from 'astro:transitions'
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter />
		<title>{title}</title>
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		@apply grid place-content-center p-20 bg-slate-700 text-slate-100;
	}
	body > div {
		@apply container;
	}
</style>
